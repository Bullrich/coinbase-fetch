{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitReturns": true,
      "noUnusedLocals": true,
      "outDir": "lib",
      "sourceMap": true,
      "skipLibCheck": true,
      "strict": true,
      "target": "es2017",
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "compileOnSave": true,
    "exclude": [
      "/node_modules"
    ]
  }
